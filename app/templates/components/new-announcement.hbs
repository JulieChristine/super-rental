{{#if addNewAnnouncement}}
<h1>New Announcement</h1>
<div>
  <form>
    <div class="form-group">
      <label for="writter">Writter</label>
      {{input value=writter id="writter"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="details">Details</label>
      {{input value=details id="details"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <button {{action 'saveAnnouncement1'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'AnnouncementFormShow'}}>New Announcement</button>
{{/if}}
