{{#if updateAnnouncementForm}}
  <h4>Update {{announcement.writter}}'s {{rental.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="writter">Writter</label>
        {{input value=writter id="writter" placeholder=announcement.writter}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=announcement.title}}
      </div>

      <div class="form-group">
        <label for="details">Details</label>
        {{input value=details id="details" placeholder=announcement.details}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=announcement.date}}
      </div>

      <button {{action 'update' announcement}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateAnnouncementForm'}}>Update</button>
{{/if}}
